<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitymombamomba.MombamombaActivity">

    <TextView
        android:id="@+id/textViewMomba"
        android:layout_width="match_parent"
        android:layout_height="@dimen/videmombamomba"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="#084C57"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logomombamomba"
        android:src="@drawable/iconlyrics" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="GADHONA LYRICS"
        android:paddingTop="5dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logomombamombabottom"
        android:text="Version : 1.0"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="208dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:paddingLeft="45dp"
            android:paddingRight="-70dp"
            app:srcCompat="@drawable/youtube" />

        <TextView
            android:id="@+id/textViewyoutube"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="100dp"
            android:text="@string/hyperlinkyoutube" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="208dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:paddingLeft="45dp"
            android:paddingRight="-70dp"
            app:srcCompat="@drawable/facebook" />

        <TextView
            android:id="@+id/textViewfacebook"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="100dp"
            android:text="@string/hyperlinkfacebook" />

    </LinearLayout>


    <TextView
        android:id="@+id/textViewJulien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Copyright@Sept 2022  |  Fifa LÃ«enx."
        android:textAlignment="center"
        android:textSize="10sp" />


</LinearLayout>